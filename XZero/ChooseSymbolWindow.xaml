<Window x:Class="XZero.ChooseSymbolWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор метки игры" Height="151" Width="183" ResizeMode="NoResize">
    <Grid>
        <RadioButton x:Name="rbX" Content="X" HorizontalAlignment="Left" Margin="36,46,0,0" VerticalAlignment="Top" Checked="rbX_Checked" GroupName="SymbolGroup"/>
        <RadioButton x:Name="rbO" Content="O" HorizontalAlignment="Left" Margin="36,67,0,0" VerticalAlignment="Top" Checked="rbX_Checked" GroupName="SymbolGroup"/>
        <Label Content="Сделайте ваш выбор" HorizontalAlignment="Left" Margin="27,5,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
